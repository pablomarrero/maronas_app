<%= form_for @slot, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :opentimes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :opentimes, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div id="promotions" class="row-fluid">
    <div >
      <fieldset>
        <legend class="no-margin-bottom"><%= t('.promotions')%> <small><%=t('.promotion_message')%></small></legend>
        <table class="table table-striped  table-condensed no-margin-bottom">
          <thead>
            <tr>
              <th class="span4"><%= t('.name') %></th>
              <th class="span6"><%= t('.description') %></th>
              <th class="span2"><%= t('actions') %></th>
            </tr>
           </thead>
        </table>
        <%= f.fields_for :promotions do |exp| %>
          <%= render 'promotion_fields', :f => exp %>
        <% end %>
      </fieldset>
    </div>
    <div class="links">
      <%= link_to_add_association t('.new_promotion'), f, :promotions, :class => 'btn'%>
    </div>
  </div>
  <div id="services" class="row-fluid">
    <div >
      <fieldset>
        <legend class="no-margin-bottom"><%= t('.services')%> <small><%=t('.services_message')%></small></legend>
        <table class="table table-striped  table-condensed no-margin-bottom">
          <thead>
            <tr>
              <th class="span4"><%= t('.name') %></th>
              <th class="span6"><%= t('.description') %></th>
              <th class="span2"><%= t('actions') %></th>
            </tr>
           </thead>
        </table>
        <%= f.fields_for :services do |exp| %>
          <%= render 'service_fields', :f => exp %>
        <% end %>
      </fieldset>
    </div>
    <div class="links">
      <%= link_to_add_association t('.new_service'), f, :services, :class => 'btn'%>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit t('.new_slot'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                slots_path, :class => 'btn' %>
  </div>
<% end %>
