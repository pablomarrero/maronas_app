<%- model_class = Promotion -%>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3 principal" style="padding: 0;">
      <div class="row-fluid" style="text-align:center;">
        <%= image_tag 'promos_izq.png' , size: '90%' %>
      </div>
      <div class="row-fluid">
        <table class="table table-striped span9">
            <tbody>
              <% @promotions.each do |promotion| %>
                <tr>
                  <td class="span12 lista" style="margin:1px , padding: 1"><%= promotion.name %></td>
                </tr>
              <% end %>
            </tbody>
        </table>     
    </div>
  </div>
</div>
